<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_gray</item>
        <item name="colorPrimaryDark">@color/dark_blue_gray</item>
        <item name="colorAccent">@color/app_gray</item>
        <item name="md_positive_color">@color/blue</item>
        <item name="md_negative_color">@color/blue</item>
    </style>

    <style name="ripple_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="button_ripple_attributes">
        <item name="rd_rippleType">touch</item>
        <item name="rd_backgroundAnimDuration">0</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_rippleAnimDuration">@integer/shorter_anim_length</item>
        <item name="rd_delayClick">untilRelease</item>
    </style>

    <style name="intro_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="text_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
</resources>
